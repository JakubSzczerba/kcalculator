<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Kcalculator{% endblock %}</title>
        {% block stylesheets %}
             <link rel="stylesheet" href="{{ asset('build/app.css') }}">
        {% endblock %}

        <link rel="stylesheet"
              href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.3/css/bootstrap.min.css"
              integrity="sha384-Zug+QiDoJOrZ5t4lssLdxGhVrurbmBWopoEl+M6BdEfwnCJZtKxi1KgxUyJq13dy"
              crossorigin="anonymous">
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        {# navbar navbar-dark bg-dark #}
        {# <nav class="navbar navbar-expand-lg navbar-dark bg-dark"> #}
            <div class="container">
                {% if app.user %}
                    <a class="navbar-brand" href="{{ path('preferentions') }}">{{ app.user.username }}</a>&emsp;&emsp;
                    
                    <form action="{{ path('findFood') }}" method="POST" class="d-flex">    
                                           
                        <input type="search" name="search" class="form-control me-2" placeholder="Wpisz nazwę produktu" aria-label="Search">
                        <button class="btn btn-outline-success" type="submit">Szukaj</button>   

                     </form>              
                    

                {% endif %}
                <div class="collapse navbar-collapse" id="navbarResponsive">
                    <ul class="navbar-nav ml-auto">
                        {% if app.user %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('dashboard') }}">Tablica</a>
                            </li>
                            <li>
                                <a class="nav-link" href="{{ path('showEntries') }}">Dziennik</a>
                            </li>
                            <li>
                                <a class="nav-link" href="{{ path('profile') }}">Mój profil</a>
                            </li>
                            <li>
                                <a class="nav-link" href="{{ path('logout') }}">Wyloguj się</a>
                            </li>
                        {% else %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('home') }}">Strona główna</a>
                            </li>
                            <li>
                                <a class="nav-link" href="{{ path('login') }}">Zaloguj się</a>
                            </li>
                            <li>
                                <a class="nav-link" href="{{ path('registration') }}">Zrejestruj się</a>
                            </li>
                        {% endif %}
                    </ul>

                </div>
            </div>
        </nav>
        <div class="container">
            <div class="col-md-12">
                {% for type, messages in app.session.flashbag.all() %}
                    {% for message in messages %}
                        <div class="alert alert-{{type}}">{{message}}</div>
                    {% endfor %}
                {% endfor %}
            </div>
            {% block body %}{% endblock %}
        </div>
        {% block javascripts %}
              <script src="{{ asset('build/app.js') }}"></script>
        {% endblock %}
    </body>
</html>
