<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <link rel="stylesheet"
              href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.3/css/bootstrap.min.css"
              integrity="sha384-Zug+QiDoJOrZ5t4lssLdxGhVrurbmBWopoEl+M6BdEfwnCJZtKxi1KgxUyJq13dy"
              crossorigin="anonymous">
        <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
        <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>

        <title>{% block title %}Kcalculator{% endblock %}</title>
        
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

    
    </head>
    <body>
        <div id="navbar1">
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container">  
            
                {% if app.user %}
                    <a class="navbar-brand" href="{{ path('dashboard') }}">
                    <div id="mylogo">
                        <img class="mylogo" src="../assets/images/LOGO.PNG" alt="LOGO">
                    </div>
                    </a>
                {% else %}
                    <a class="navbar-brand" href="{{ path('home') }}">
                    <div id="mylogo">
                        <img class="mylogo" src="../assets/images/LOGO.PNG" alt="LOGO">
                    </div>
                    </a>
                {% endif %}

                {% if app.user %}

                <div id="searchingField"> 
                    <form action="{{ path('findFood') }}" method="POST" class="d-flex">    
                                           
                        <input type="search" name="search" class="form-control me-2" placeholder="Wpisz nazwę produktu, aby dodać go do dziennika" aria-label="Search">
                        <button class="btn btn-outline-success" type="submit">Szukaj</button>   

                     </form>              
                </div> 

                {% endif %}
                <div class="collapse navbar-collapse" id="navbarResponsive">
                    <ul class="navbar-nav ml-auto">
                        {% if app.user %}
                            <li id="navbarIcons" class="nav-item">
                                <a class="nav-link" href="#">
                                    <ion-icon name="moon-sharp"></ion-icon>
                                </a>
                            </li>
                            <li id="navbarIcons">
                                <a class="nav-link" href="#">
                                    <ion-icon name="notifications-sharp"></ion-icon>
                                </a>
                            </li>
                            <li id="navbarIcons">
                                <a class="nav-link" href="{{ path('profile') }}">
                                   <ion-icon name="person-circle-sharp"></ion-icon>
                                </a>
                            </li>
                            
                        {% else %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('home') }}">Strona główna</a>
                            </li>
                            <li>
                                <a class="nav-link" href="{{ path('login') }}">Zaloguj się</a>
                            </li>
                            <li>
                                <a class="nav-link" href="{{ path('registration') }}">Zrejestruj się</a>
                            </li>
                        {% endif %}
                    </ul>

                </div>
            </div>
        </nav>
        </div>
        {% if app.user %}
         <div id="wrapper">

        <!-- <a href="#menu-toggle" class="btn btn-default" id="menu-toggle">Toggle Menu</a> -->
        {#<div id="page-content-wrapper">
                    <div class="container-fluid">
                    <div class="row">
                    <div class="col-lg-12">
                        <a href="#menu-toggle" class="btn btn-default" id="menu-toggle">Toggle Menu</a>
                    </div>
                    </div>
                    </div>
                    </div> #}
        <div id="sidebar-wrapper">
            <ul class="sidebar-nav">
                <li class="sidebar-brand">
                    <a href="#menu-toggle" id="menu-toggle">
                        <ion-icon name="calculator-sharp"></ion-icon>
                            Ukryj menu
                    </a>
                </li>
                <li>
                    <a href="{{ path('dashboard') }}">
                        <ion-icon name="home-sharp"></ion-icon>
                            Panel główny
                    </a>
                </li>
                <li>
                    <a href="{{ path('showEntries') }}">
                        <ion-icon name="calendar-number-sharp"></ion-icon>
                            Dziennik
                    </a>
                </li>
                <li>
                    <a href="{{ path('profile') }}">
                        <ion-icon name="person-sharp"></ion-icon>
                            {{ app.user.username }}
                    </a>
                </li>
                <li>
                    <a href="{{ path('showEntries') }}">
                        <ion-icon name="pie-chart-sharp"></ion-icon>
                            Analiza
                    </a>
                </li>
                <li>
                    <a href="{{ path('logout') }}">
                        <ion-icon name="log-out-sharp"></ion-icon>
                            Wyloguj się
                    </a>
                </li>
            </ul>
        </div>
        </div>
         {% endif %}
              
        <div class="container">
            <div class="col-md-12">
                {% for type, messages in app.session.flashbag.all() %}
                    {% for message in messages %}
                        <div class="alert alert-{{type}}">{{message}}</div>
                    {% endfor %}
                {% endfor %}
            </div>
            {% block body %}{% endblock %}
        </div>
        {% block javascripts %}
             {{ encore_entry_script_tags('app') }}
        {% endblock %}
        <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
        <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
        <script>
            $("#menu-toggle").click(function(e) {
                e.preventDefault();
                $("#wrapper").toggleClass("toggled");
            });
        </script>
    </body>
</html>
