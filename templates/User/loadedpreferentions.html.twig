{% extends 'base.html.twig' %}

{% block body %}   

<div class="row" id="dashboard">

   <div class="col-lg-12">

                        <h2 class="mt-5">Witaj {{ preferentions.users.username  }}!</h2><br>
                                                  
                            <em><h6>Poniżej przedsawiamy Twoje zapotrzebowanie kaloryczne :)</h6><br><br></em>

                            {% if preferentions.gender == 'Mężczyzna' %}

