{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
              
            <div class="row"><h1 class="mt-5">Edytuj wpis: </h1></div><br><br><br>

                <form action="{{ path('editEntry', {id: entry.id}) }}" method="POST" id="entryform" class="form-horizontal">
                        
                         <div><h5><bold><span style="color: #ff6633">id wpisu: </span></bold>{{ entry.id|e }} </h5></div>
                         <div><h5><bold><span style="color: #ff6633">kcal: </span></bold>{{ entry.energyXgram|e }} kcal</h5></div>
                         <div><h5><bold><span style="color: #ff6633">waga: </span></bold>{{ (entry.grammage|e) * 100}} g</h5></div>
                         <div><h5><bold><span style="color: #ff6633">produkt: </span></bold>{{ food.id|e }} g</h5></div>
            
                 <div class="row">

                        <div>
                            <form class="row row-cols-lg-auto g-3 align-items-center">
                                <div class="col-12">
                                <br>
                                    <label class="visually-hidden" for="inlineFormSelectPref">Wybierz posiłek</label>

                                    <select name="Meals" form="entryform">
                                        <option selected, value="Przekąska">Przekąska</option>
                                        <option value="Śniadanie">Śniadanie</option>
                                        <option value="Drugie śniadanie">Drugie śniadanie</option>
                                        <option value="Obiad">Obiad</option>
                                        <option value="Podwieczorek">Podwieczorek</option>
                                        <option value="Kolacja">Kolacja</option>   
                                    </select><br> <br>

                                   
                                    <label class="visually-hidden" for="inlineFormSelectPref">Wielkość porcji</label>

                                    <select name="Grammage" form="entryform"> 
                                        <option selected, value="1">100 g</option>
                                        <option value="0.125">12.5 g</option>
                                        <option value="0.25">25 g</option>
                                        <option value="0.333">33 g</option>
                                        <option value="0.375">37.5 g</option>
                                        <option value="0.50">50 g</option>
                                        <option value="0.625">62.5 g</option>
                                        <option value="0.666">66 g</option>
                                        <option value="0.75">75 g</option>
                                        <option value="0.875">87.5 g</option>
                                        <option value="2">200 g</option>
                                        <option value="3">300 g</option>
                                        <option value="4">400 g</option>
                                        <option value="5">500 g</option>
                                    </select>

                                </div>

                                 </div>
                                </form>
                           
                        </div>
                    </form>
                </div>  
        </div>
    </div>


                    
     
        
    
{% endblock %}