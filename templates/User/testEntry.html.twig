{% extends 'base.html.twig' %}

{% block body %}
   <div class="col-lg-6">
                    

                        <h3 class="mt-5"><h1><span style="color: blue"> {{ "now"|date("d/m/Y") }} </span></h1>
                            <div>                           
                                    <br><br>
                                    {% for entry in entry %}

                                        {% for product in entry.food %}
                                            <div class="row"><h3><blold><span style="color: grey">{{ product.product|e }}, {{ entry.grammage|e }} g, </span><h3></bold></div>
                                        {% endfor %}
                                        
                                        
                                        <div class="row"><h3><blold>Posilek: {{ entry.meal_type|e }}, <h3></bold></div> <br>
                                        <div class="row"><h3><blold>Porcja: {{ entry.grammage|e }} g, <h3></bold></div> <br>

                                        

                                                                                                                        
                                        <hr class="row"style="height:2px;border-width:0;color:gray;background-color:gray">
                                        
                                    {% endfor %}                                                                            
                            </div>                      
                    </div>                  
{% endblock %}
