{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="mt-5">(obliczone kcal) - (kcal z produktów) = pozostałe</h1>
            <br>
            <br>
            <br>
            <div class="col-lg-6">
                <form action="{{ path('uploadFood') }}" method="POST" class="form-horizontal">
                    <label for="username">Wpisz nazwę produktu</label>
                    <input type="text" name="search" class="form-control"><br>
                    <button type="submit" class="btn btn-success">Szukaj</button><br>                   
                </form>
            </div>
            <div class="col-lg-6">
                <form action="{{ path('uploadFood') }}" method="POST" class="form-horizontal">
