{% extends 'base.html.twig' %}
{% block body %}
    <div class="row" id="login">
        <div class="col-lg-12">
            <h1 class="mt-5">Zapisz, aby dodać wpis do dziennika</h1><br>
            <div class="col-lg-6">
                {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
                {{ form_label(form.Meals) }}
                {{ form_widget(form.Meals, {'attr': {'class': 'form-control'}}) }} <br>
                {{ form_label(form.Grammage) }}
                {{ form_widget(form.Grammage, {'attr': {'class': 'form-control'}}) }}
                <br>
                <input type="submit" value="Wyślij" class="btn btn-success">
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}