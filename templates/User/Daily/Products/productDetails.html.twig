{% extends 'base.html.twig' %}

{% block title %}{{ product.product }}{% endblock %}

{% block body %}
    <div class="row" id="login">
        <div class="col-lg-12">
        
            <div class="d-flex flex-column align-items-center text-center">
                <h1 class="mt-5"> Zapisz, aby dodać wpis do dziennika</h1>
            </div>
            <hr>
            <br><br>

            <div><h1><blold>{{ product.product|e }}: <h1></bold></div><br>
                <div><h2><bold><span style="color: #006600">{{ product.energy|e }} kcal, </span></bold> <span style="color: grey"><em>porcja 100g</em></span></h2> 
    
                <div>
                    <hr style="height:2px;border-width:0;color:gray;background-color:gray">

                    <div><h6 class="mb-0"><strong><span style="color: #0099FF">Białko: </span></strong>{{ product.protein|e }} g</h6></div>

                    <div><h6 class="mb-0"><strong><span style="color: #FF6633">Tłuszcz: </span></strong>{{ product.fat|e }} g</h6></div>

                    <div><h6 class="mb-0"><strong><span style="color: #663300">Węglowodany: </span></strong>{{ product.carbo|e }} g</h6></div>
                </div> <br>
               
            <div class="col-lg-6">
                {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
                {{ form_label(form.Meals) }}
                {{ form_widget(form.Meals, {'attr': {'class': 'form-control'}}) }} <br>
                {{ form_label(form.Grammage) }}
                {{ form_widget(form.Grammage, {'attr': {'class': 'form-control'}}) }}
                <br>
                <input type="submit" value="Zapisz" class="btn btn-success">
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}