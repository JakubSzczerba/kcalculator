{% extends 'base.html.twig' %}

{% block body %}

 {% if products %}

<div class="col-lg-12" >
    <h3 class="mt-5">Wyniki wyszukiwania</h3><br>
        <br>         
                    <div class="row">
                            <div>                           
                                    <table class="table table-striped" style="width: 1000px;">
                                    <tbody>
                                    {% for product in products %}
                                        <tr>
                                            <td>
                                                <a href="{{ path('product.detail', {id: product.id}) }}"><h3><blold>{{ product.product|e }}<h3></bold></a>
                                            </td>
                                            <td>
                                                 
                                            </td>
                                            <td>
                                               <h4><bold><span style="color: #006600">{{ product.energy|e }} kcal &emsp;&nbsp;&nbsp;&emsp;</span></bold></h4>
                                            </td>  
                                        </tr> 
                                    {% endfor %} 
                                    
                                     </tbody>
                                    </table>
                                     </div> 

                                    {% else %}
                                       <div class="col-lg-12">
                                         <h2 class="mt-5">Wyszukiwana fraza nie istnieje</h2><br>                               
                                    {% endif %}                                                           
                            </div>                      
                    </div>                  
                
     
            
        </div>
    
{% endblock %}
